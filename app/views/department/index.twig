{% extends 'layout/layout.twig' %}
{% set active_page = 'department' %}
{% set title = 'Отделы' %}

{% block content %}
    <a href="/department/create" class="btn btn-primary mb-2">Добавить отдел</a>
    <div class="table-responsive">
        <table class="table table-hover">
            <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Название</th>
                <th scope="col">Дата создания</th>
                <th scope="col">Дата редактирования</th>
                <th scope="col"></th>
            </tr>
            </thead>
            <tbody>
            {% for department in departments %}
                <tr>
                    <td>{{ loop.index }}</td>
                    <td>{{ department.name }}</td>
                    <td>{{ department.getCreatedAt('Y-m-d H:i:s') }}</td>
                    <td>{{ department.getUpdatedAt('Y-m-d H:i:s') }}</td>
                    <td>
                        <a href="/department/update/{{ department.id }}" title="Редактировать" class="text-decoration-none">
                            <span data-feather="edit"></span>
                        </a>
                        <a href="/department/delete/{{ department.id }}" title="Удалить" class="ml-2 text-decoration-none"
                           data-bs-toggle="modal" data-bs-target="#deleteModal">
                            <span data-feather="trash-2"></span>
                        </a>
                    </td>
                </tr>
            {% else %}
                <div class="alert alert-warning">
                    Отделов не найдено
                </div>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}